{
  "name": "cloudbase/symfony-base",
  "description": "A base Symfony 7.3 project template with Latte templating",
  "type": "project",
  "license": "GPL-3.0-or-later",
  "version": "0.4.1",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": ">=8.3",
    "cloudbase/latte-helper": "^0.1.2",
    "doctrine/dbal": "^4.3",
    "doctrine/doctrine-bundle": "^2.18",
    "doctrine/orm": "^3.5",
    "symfony/console": "7.3.*",
    "symfony/dotenv": "7.3.*",
    "symfony/framework-bundle": "7.3.*",
    "symfony/runtime": "7.3.*",
    "symfony/security-bundle": "^7.3",
    "symfony/yaml": "7.3.*"
  },
  "config": {
    "allow-plugins": {
      "symfony/runtime": true
    },
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "stan": "./vendor/bin/phpstan analyse -c phpstan.neon",
    "badge": "./vendor/bin/badger badge:version . && ./vendor/bin/badger badge:license .",
    "cs": "./vendor/bin/php-cs-fixer fix --dry-run --diff --allow-risky=yes",
    "post-create-project-cmd": [
      "@php -r \"copy('.env.template', '.env');\"",
      "@php bin/setup",
      "mkdir -p var/cache var/log && chmod -R 777 var/"
    ]
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.89",
    "loomsoftware/badger": "^1.0",
    "phpstan/phpstan": "^2.1",
    "phpstan/phpstan-doctrine": "^2.0"
  }
}
