{
  "name": "cloudbase/symfony-base",
  "description": "A base Symfony 7.3 project template with Latte templating",
  "type": "project",
  "license": "GPL-3.0-or-later",
  "version": "0.1.0",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": ">=8.2",
    "ext-ctype": "*",
    "ext-iconv": "*",
    "symfony/console": "7.3.*",
    "symfony/dotenv": "7.3.*",
    "symfony/framework-bundle": "7.3.*",
    "symfony/runtime": "7.3.*",
    "symfony/yaml": "7.3.*",
    "cloudbase/latte-helper": "^0.1.2"
  },
  "config": {
    "allow-plugins": {
      "symfony/runtime": true
    },
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "badge": "./vendor/bin/badger badge:version . && ./vendor/bin/badger badge:license .",
    "post-create-project-cmd": [
      "@php -r \"copy('.env.template', '.env');\"",
      "@php bin/setup.php"
    ]
  },
  "require-dev": {
    "loomsoftware/badger": "^1.0"
  }
}
